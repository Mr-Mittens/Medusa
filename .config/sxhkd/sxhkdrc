    scrot ~/images/screenshots/%Y-%m-%d-%T-screenshot.png # moves screenshot to specified dir


#pulsemixer
alt + p
	termite -e pulsemixer

#newsboat
alt + n
	termite -e newsboat

#telegram
alt + t
        telegram-desktop


